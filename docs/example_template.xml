<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>example_content_types</key>

    <view>templates/example_content_types</view>
    <controller>App\Controller\WebsiteController::indexAction</controller>

    <meta>
        <title lang="de">Beispiel: Content Types</title>
        <title lang="en">Example: Content Types</title>
    </meta>

    <properties>
        <!-- NumberWithDefault Example -->
        <property name="refresh_interval" type="number_with_default" mandatory="false">
            <meta>
                <title lang="de">Aktualisierungsintervall (ms)</title>
                <title lang="en">Refresh Interval (ms)</title>
            </meta>
            <params>
                <param name="min" value="1000"/>
                <param name="max" value="30000"/>
                <param name="step" value="500"/>
                <param name="multiple_of" value="1"/>
                <param name="default_value" value="5000"/>
            </params>
        </property>

        <!-- ColorSelect Example: Bootstrap Colors -->
        <property name="button_color" type="color_select" mandatory="false">
            <meta>
                <title lang="de">Button-Farbe</title>
                <title lang="en">Button Color</title>
            </meta>
            <params>
                <param name="values" type="collection">
                    <param name="primary" value="primary:#0d6efd">
                        <meta>
                            <title lang="de">Prim채rfarbe (Blau)</title>
                            <title lang="en">Primary (Blue)</title>
                        </meta>
                    </param>
                    <param name="secondary" value="secondary:#6c757d">
                        <meta>
                            <title lang="de">Sekund채rfarbe (Grau)</title>
                            <title lang="en">Secondary (Gray)</title>
                        </meta>
                    </param>
                    <param name="success" value="success:#198754">
                        <meta>
                            <title lang="de">Erfolg (Gr체n)</title>
                            <title lang="en">Success (Green)</title>
                        </meta>
                    </param>
                    <param name="danger" value="danger:#dc3545">
                        <meta>
                            <title lang="de">Gefahr (Rot)</title>
                            <title lang="en">Danger (Red)</title>
                        </meta>
                    </param>
                    <param name="warning" value="warning:#ffc107">
                        <meta>
                            <title lang="de">Warnung (Gelb)</title>
                            <title lang="en">Warning (Yellow)</title>
                        </meta>
                    </param>
                    <param name="info" value="info:#0dcaf0">
                        <meta>
                            <title lang="de">Info (Cyan)</title>
                            <title lang="en">Info (Cyan)</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>

        <!-- ============================================================ -->
        <!-- STANDARD MODE: Stores "primary:#0d6efd" (key:color format)   -->
        <!-- Use Case: Bootstrap classes, button colors, etc.             -->
        <!-- ============================================================ -->
        <property name="button_color" type="color_select" mandatory="false">
            <meta>
                <title lang="de">Button-Farbe (mit Farbe)</title>
                <title lang="en">Button Color (with color)</title>
            </meta>
            <params>
                <param name="values"
                       type="expression"
                       value="service('sulu_content_types.color_palette_provider').getValues('bootstrap')"
                />
                <param name="default_value"
                       type="expression"
                       value="service('sulu_content_types.color_palette_provider').getDefaultValue('bootstrap')"
                />
            </params>
        </property>

        <!-- ============================================================ -->
        <!-- CUSTOM MODE: Stores "primary:#008800" (key:color format)     -->
        <!-- Use Case: classes, colors, etc.                              -->
        <!-- ============================================================ -->
        <property name="button_color" type="color_select" mandatory="false">
            <meta>
                <title lang="de">Button-Farbe (mit Farbe)</title>
                <title lang="en">Button Color (with color)</title>
            </meta>
            <params>
                <param name="values"
                       type="expression"
                       value="service('sulu_content_types.color_palette_provider').getValues('bootstrap')"
                />
                <param name="default_value"
                       type="expression"
                       value="service('sulu_content_types.color_palette_provider').getDefaultValue('bootstrap')"
                />
            </params>
        </property>

        <!-- SliderRange Example: Banner Rotation (Classic with Input) -->
        <property name="banner_rotation_speed" type="slider_range" mandatory="false">
            <meta>
                <title lang="de">Banner-Rotationsgeschwindigkeit (ms)</title>
                <title lang="en">Banner Rotation Speed (ms)</title>
            </meta>
            <params>
                <param name="min" value="1000"/>
                <param name="max" value="10000"/>
                <param name="step" value="500"/>
                <param name="default_value" value="5000"/>
                <param name="display_mode" value="input"/>
                <param name="show_labels" value="true"/>
            </params>
        </property>

        <!-- SliderRange Example: Opacity (Floating Tooltip) -->
        <property name="overlay_opacity" type="slider_range" mandatory="false">
            <meta>
                <title lang="de">Overlay-Transparenz (%)</title>
                <title lang="en">Overlay Opacity (%)</title>
            </meta>
            <params>
                <param name="min" value="0"/>
                <param name="max" value="100"/>
                <param name="step" value="5"/>
                <param name="default_value" value="50"/>
                <param name="display_mode" value="floating"/>
                <param name="show_labels" value="true"/>
            </params>
        </property>

        <!-- SliderRange Example: Volume (Inline) -->
        <property name="volume_level" type="slider_range" mandatory="false">
            <meta>
                <title lang="de">Lautst채rke</title>
                <title lang="en">Volume Level</title>
            </meta>
            <params>
                <param name="min" value="0"/>
                <param name="max" value="100"/>
                <param name="step" value="10"/>
                <param name="default_value" value="50"/>
                <param name="display_mode" value="inline"/>
            </params>
        </property>

        <!-- SliderRange Example: Zoom (Below) -->
        <property name="zoom_level" type="slider_range" mandatory="false">
            <meta>
                <title lang="de">Zoom-Stufe</title>
                <title lang="en">Zoom Level</title>
            </meta>
            <params>
                <param name="min" value="50"/>
                <param name="max" value="200"/>
                <param name="step" value="10"/>
                <param name="default_value" value="100"/>
                <param name="display_mode" value="below"/>
                <param name="show_labels" value="true"/>
            </params>
        </property>

        <!-- SliderRange Example: Brightness (Minimal - No Labels) -->
        <property name="brightness" type="slider_range" mandatory="false">
            <meta>
                <title lang="de">Helligkeit</title>
                <title lang="en">Brightness</title>
            </meta>
            <params>
                <param name="min" value="0"/>
                <param name="max" value="100"/>
                <param name="step" value="5"/>
                <param name="default_value" value="75"/>
                <param name="display_mode" value="floating"/>
                <param name="show_labels" value="false"/>
            </params>
        </property>

        <!-- NumberWithDefault Example: Articles per Page -->
        <property name="articles_per_page" type="number_with_default" mandatory="false">
            <meta>
                <title lang="de">Artikel pro Seite</title>
                <title lang="en">Articles per Page</title>
            </meta>
            <params>
                <param name="min" value="1"/>
                <param name="max" value="50"/>
                <param name="step" value="1"/>
                <param name="multiple_of" value="1"/>
                <param name="default_value" value="10"/>
            </params>
        </property>
    </properties>
</template>